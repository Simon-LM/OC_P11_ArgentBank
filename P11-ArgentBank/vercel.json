{
    "rewrites": [
      { "source": "/api/(.*)", "destination": "/api/$1" }
    ],
    "builds": [
      {
        "src": "package.json",
        "use": "@vercel/static-build",
        "config": {
          "buildCommand": "vite build",
          "outputDirectory": "dist",
          "installCommand": "pnpm install"
        }
      }
    ]
  }
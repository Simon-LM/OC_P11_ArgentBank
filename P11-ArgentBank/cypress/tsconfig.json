{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "types": ["cypress", "@testing-library/cypress", "cypress-axe"],
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "isolatedModules": false
  },
  "include": [
    "**/*.ts",
    "**/*.cy.ts",
    "**/*.d.ts",
    "support/**/*",
    "e2e/edge-cases/.edge-cases-fixed.cy.ts",
    "e2e/transactions/.transactions.cy.ts",
    "e2e/transactions/.transactions-display.fixed.cy.ts"
  ],
  "exclude": ["../node_modules", "../dist"]
}
